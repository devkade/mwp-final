<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="#FFFFFF">

    <!-- App Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GymFlow Manager"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="#12c0e2"
        android:layout_marginBottom="8dp"/>

    <!-- Subtitle -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="헬스장 운동기구 모니터링"
        android:textSize="14sp"
        android:textColor="#666666"
        android:layout_marginBottom="48dp"/>

    <!-- Error Message -->
    <TextView
        android:id="@+id/error_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#DC3545"
        android:textSize="14sp"
        android:layout_marginBottom="16dp"
        android:visibility="gone"/>

    <!-- Security Key Input -->
    <EditText
        android:id="@+id/security_key_input"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:hint="보안키를 입력하세요"
        android:inputType="textPassword"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/edit_text_background"
        android:textColorHint="#999999"
        android:textSize="16sp"/>

    <!-- Login Button -->
    <Button
        android:id="@+id/login_button"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="로그인"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:background="#12c0e2"
        android:textAllCaps="false"/>

    <!-- Help Text -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="관리자에게 보안키를 문의하세요"
        android:textSize="12sp"
        android:textColor="#999999"
        android:layout_marginTop="24dp"/>

</LinearLayout>
